{
    "parser": "babel-eslint",
    "rules": {
        "strict": 0
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-native/all"
    ],
    "plugins": [
        "standard",
        "promise",
        "react",
        "react-native"
    ],
    "parserOptions": {
        "ecmaVersion": "6",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "no-console": [
            "error",
            { "allow": ["tron"] }
        ]
    }
}
